<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_corner"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
      >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:paddingLeft="16dp"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="4dp"
            android:text="Company Name"
            android:textColor="#000"
            android:textSize="16dp"></TextView>

        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Set Company Name"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:textSize="12dp"
            android:paddingLeft="4dp"></TextView>


        <TextView
            android:id="@+id/total_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:text="Total Sales"
            android:textSize="12dp"
            android:layout_marginTop="8dp"></TextView>

        <TextView
            android:id="@+id/gbp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:text="GBP"
            android:textSize="16dp"
            android:textColor="#000"
            android:layout_marginTop="26dp"></TextView>

        <TextView
            android:id="@+id/currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="245dp"
            android:hint="currency"
            android:textSize="16dp"
            android:textColor="#000"
            android:layout_marginTop="26dp"></TextView>


        <Button
            android:id="@+id/view_Details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="85dp"
            android:text="View Details"
            android:layout_gravity="center_horizontal"></Button>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>